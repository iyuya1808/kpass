# KPass Proxy Server Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
NODE_ENV=production

# Canvas/K-LMS Configuration
CANVAS_BASE_URL=https://lms.keio.jp

# CORS Configuration (for VPS deployment)
ALLOWED_ORIGINS=http://localhost:*,https://localhost:*,http://127.0.0.1:*,https://127.0.0.1:*

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=24h

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/combined.log
ERROR_LOG_FILE=logs/error.log

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Puppeteer Configuration (for VPS)
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-gpu,--single-process
PUPPETEER_TIMEOUT=60000

# Session Configuration
SESSION_TIMEOUT=1800000
SESSION_CLEANUP_INTERVAL=300000

# Security Configuration
BCRYPT_ROUNDS=12
HELMET_ENABLED=true

# VPS Specific Configuration
VPS_MODE=true
MEMORY_LIMIT=4096
DISABLE_GPU=true
